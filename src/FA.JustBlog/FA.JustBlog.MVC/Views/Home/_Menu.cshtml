@model CategoryMenuViewModel


@foreach (var item in Model.PopularCategories)
{
    <li class="nav-item">
        @Html.ActionLink(item.Name, "Details", "Categories", new { area = "", urlSlug = item.UrlSlug }, new { @class = "nav-link" })
    </li>
}

<li class="nav-item submenu dropdown">
    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Remain Categories</a>
    <ul class="dropdown-menu">
        @foreach (var item in Model.RemainCategories)
        {
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Details", "Categories" , new { area = "", urlSlug = item.UrlSlug})">@item.Name</a></li>
        }
    </ul>
</li>